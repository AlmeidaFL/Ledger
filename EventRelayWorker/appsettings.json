{
  "Tenants": {
    "TenantConfigs": [
        {
          "Name": "UserApi",
          "ConnectionString": "Host=localhost;Port=5432;Database=userdb;Username=postgres;Password=postgres",
          "OutboxTable": "OutboxMessages"
        }
      ]
  },
  "Outbox": {
    "BatchSize": 50,
    "PollingIntervalSeconds": 2,
    "MaxRetries": 3
  },
  "Kafka": {
    "BootstrapServers": "localhost:29092",
    "ClientId": "event-relay-worker",
    "EnableIdempotence": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}
